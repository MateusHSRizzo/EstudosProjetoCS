@model IEnumerable<EstudoProjetoCS.Models.ProcedimentoModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["MenssagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MenssagemSucesso"]
    </div>
}
@if (TempData["MenssagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MenssagemErro"]
    </div>
}
<div class="text-center">
    <h1 class="display-4"> Listagem de Procedimentos</h1>
    <br />
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-action="Create">Novo Procedimento</a>
    </div>
    <br />
    <table class="table" id="TablePag">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tecnico.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prioridade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tecnico.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prioridade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic outlined example">
                            <a role="button" class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                            <a role="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a role="button" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a class="btn btn-primary" role="button" asp-controller="Query" asp-action="ConsultaAgrupamentoMes">Soma dos Valores por Mês</a>
    <a class="btn btn-primary" role="button" asp-controller="Query" asp-action="ConsultaMultiplasTabelas">Soma dos valores anuais por Técnico</a>
    <a class="btn btn-primary" role="button" asp-controller="Query" asp-action="ConsultaPivotEstado">Valores por andamento</a>
</div>
