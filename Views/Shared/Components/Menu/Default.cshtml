@model UsuarioModel

<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@Model.Nome</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Página Inicial</a>
        </li>
        @if (Model.Perfil == EstudoProjetoCS.Enum.PerfilEnum.admin || Model.Perfil == EstudoProjetoCS.Enum.PerfilEnum.atendente || Model.Perfil == EstudoProjetoCS.Enum.PerfilEnum.tecnico)
        {
            @if (Model.Perfil == EstudoProjetoCS.Enum.PerfilEnum.admin || Model.Perfil == EstudoProjetoCS.Enum.PerfilEnum.atendente)
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                </li>
            }

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Procedimentos" asp-action="Index">Ordens de Serviço</a>
            </li>

            @if(Model.Perfil == EstudoProjetoCS.Enum.PerfilEnum.admin)
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Atendentes" asp-action="Index">Atendentes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Tecnicos" asp-action="Index">Técnicos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Cidades" asp-action="Index">Cidades</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuários</a>
                </li>
            } 
        }
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a>
        </li>
    </ul>
</div>