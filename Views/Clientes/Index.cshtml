@model IEnumerable<EstudoProjetoCS.Models.ClienteModel>
@{
    ViewData["Title"] = "Listagem de Clientes";
}

<div class= "text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Clientes" asp-action="Criar">Novo Cliente</a>
    </div>
    <br />
    <h1 class="display-4"> Listagem de Clientes</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Contato)</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @foreach(var item in Model)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Contato)</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic outlined example">
                            <a role="button" class="btn btn-outline-primary" asp-controller="Clientes" asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a>
                            <a role="button" class="btn btn-outline-primary" asp-controller="Clientes" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                            <a role="button" class="btn btn-outline-danger" asp-controller="Clientes" asp-action="Excluir" asp-route-id="@item.Id">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

