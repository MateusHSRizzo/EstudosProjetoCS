@model ClienteModel
@{
    ViewData["Title"] = "Editar Cadastro ";
}

<div class="text-center">
    <h1 class="display-4"> Editar Cadastro</h1>
</div>

<form asp-action="Editar" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome</label>
        <input asp-for="Nome" class="form-control" placeholder="Nome"/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Contato" class="control-label">Contato</label>
        <input asp-for="Contato" class="form-control" placeholder="(xx) xxxxx-xxxx" />
        <span asp-validation-for="Contato" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" placeholder="Endereço de DocumentoEmail" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Documento" class="control-label">Documento</label>
        <input asp-for="Documento" class="form-control" placeholder="Número do GeneroDocumento" />
        <span asp-validation-for="Documento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genero" class="control-label">Genero</label>
        <input asp-for="Genero" class="form-control" placeholder="Gênero" />
        <span asp-validation-for="Genero" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nascimento" class="control-label">Nascimento</label>
        <input asp-for="Nascimento" class="form-control"/>
        <span asp-validation-for="Nascimento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Endereco" class="control-label">Endereco</label>
        <input asp-for="Endereco" class="form-control" placeholder="Endereço" />
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdCidade" class="control-label"></label>
        <select asp-for="IdCidade" class="form-control" asp-items="ViewBag.IdCidade"></select>
        <span asp-validation-for="IdCidade" class="text-danger"></span>
    </div>

    <br />
    
    <input type="submit" value="Salvar" class="btn btn-primary" />
    <a class="btn btn-secondary" asp-controller="Clientes" asp-action="Index" role="button">Voltar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

