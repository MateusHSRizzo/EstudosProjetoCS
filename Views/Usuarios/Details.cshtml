@model EstudoProjetoCS.Models.UsuarioModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4"> Detalhes do Usuário</h1>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Dados</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.Nome)</th>
                    <td>@Html.DisplayFor(model => model.Nome)</td>
                </tr>
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.Login)</th>
                    <td>@Html.DisplayFor(model => model.Login)</td>
                </tr>
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.Perfil)</th>
                    <td>@Html.DisplayFor(model => model.Perfil)</td>
                </tr>
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.Password)</th>
                    <td>@Html.DisplayFor(model => model.Password)</td>
                </tr>
            </tbody>
        </table>
    </div>
    <a class="btn btn-primary" role="button" asp-action="Index">Voltar</a>
</div>