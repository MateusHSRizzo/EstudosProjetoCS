@model IEnumerable<EstudoProjetoCS.Models.CidadeModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["MenssagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MenssagemSucesso"]
    </div>
}
@if (TempData["MenssagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MenssagemErro"]
    </div>
}
<div class="text-center">
    <h1 class="display-4">Listagem de Cidades</h1>
    <br />
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Cidades" asp-action="Create">Nova Cidade</a>
    </div>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary" role="button" asp-controller="Query" asp-action="ConsultaAgrupamento">Mostrar apenas UF's</a>
    </div>
    <br />
    <table class="table" id="TablePag">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Descricao)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Estado)</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@Html.DisplayFor(modelItem => item.Descricao)</td>
                    <td scope="row">@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td scope="row">
                        <div class="btn-group" role="group" aria-label="Basic outlined example">
                            <a role="button" class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                            <a role="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a role="button" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>