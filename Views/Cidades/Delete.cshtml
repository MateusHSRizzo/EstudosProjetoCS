@model EstudoProjetoCS.Models.CidadeModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Dados</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.Descricao)</th>
                    <td>@Html.DisplayFor(model => model.Descricao)</td>
                </tr>
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.Estado)</th>
                    <td>@Html.DisplayFor(model => model.Estado)</td>
                </tr>
            </tbody>
        </table>
    </div>

    <br />
    <h3> Esta ação excluira permanentemente o registro, deseja continuar?</h3>
    <br />

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-primary" role="button" asp-action="Index">Voltar</a>
    </form>
</div>